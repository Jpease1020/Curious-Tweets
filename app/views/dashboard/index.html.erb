<div class='row'>
  <div class='col-sm-3 col-md-3 col-lg-3'>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">My Info</h3>
      </div>
      <div class="panel-body">
        <%= image_tag @user.profile_image_url.to_s.sub("_normal.","."), size: "200x200" %>
      </div>
      <div class="panel-body">
        <ul>
          <li><%= link_to "My Profile", profile_path %></li>
          <li><%= @user.name %></li>
          <li>Screen Name: <%= @user['screen_name'] %></li>
          <li>Followers: <%= @user['followers_count'] %></li>
          <li>Following: <%= @user['friends_count'] %></li>
          <li>Tweets: <%= @user["statuses_count"] %></li>
        </ul>
      </div>
    </div>
  </div>
  <div class='col-sm-6 col-md-6 col-lg-6'>
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_tag tweets_path do %>
        <%= text_area_tag :tweet, nil, placeholder: "What's on your mind?", class: "form-control" %><br>
        <%= submit_tag "Tweet This!", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">What's Trending Now</h3>
      </div>
      <% @tweets.each do |tweet| %>
        <div class="panel-body">
          <ul class="list-group">
            <li class="list-group-item"><%= image_tag(tweet["user"]["profile_image_url"].to_s.sub("_normal.","."), size: "25x25") %><h6><%= tweet['user']['name'] %> | @<%= tweet['user']['screen_name'] %> | Retweeted <%= tweet["retweet_count"] %></h6></li>
            <li class="list-group-item"><%= tweet.text %></li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
  <div class='col-sm-3 col-md-3 col-lg-3'>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">My Recent Tweets</h3>
      </div>
      <% @my_tweets.each do |tweet| %>
        <div class="panel-body">
          <ul class="list-group">
            <li class="list-group-item"><h6>Retweeted <%= tweet["retweet_count"] %></h6></li>
            <li class="list-group-item"><%= tweet.text %></li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
